{
  "backend": {
    "_target_": "cotlab.backends.VLLMBackend",
    "tensor_parallel_size": 1,
    "dtype": "bfloat16",
    "trust_remote_code": true,
    "max_model_len": 4096
  },
  "model": {
    "name": "mistralai/Ministral-3-14B-Reasoning-2512",
    "variant": "14b",
    "max_new_tokens": 2048,
    "temperature": 0.7,
    "top_p": 0.9
  },
  "prompt": {
    "_target_": "cotlab.prompts.strategies.ContrarianStrategy",
    "name": "contrarian"
  },
  "dataset": {
    "_target_": "cotlab.datasets.RadiologyDataset",
    "name": "radiology",
    "path": "data/Radiology_Synthetic_Data.csv",
    "text_column": "Synthetic",
    "label_column": "Flag"
  },
  "experiment": {
    "_target_": "cotlab.experiments.CoTFaithfulnessExperiment",
    "name": "cot_faithfulness",
    "description": "Test whether Chain of Thought reflects true model reasoning",
    "tests": [
      "bias_influence",
      "causal_intervention",
      "counterfactual"
    ],
    "metrics": [
      "bias_acknowledgment_rate",
      "intervention_consistency",
      "answer_cot_alignment"
    ]
  },
  "seed": 42,
  "verbose": true,
  "dry_run": false
}